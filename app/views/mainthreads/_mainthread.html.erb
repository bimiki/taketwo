<%= turbo_frame_tag dom_id(mainthread) do %>
<div class="card">
  <div class="card-body">
    <%= @mainthread.name %>
    <div class="btn btn-group">
      <%= link_to "delete", mainthread, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-secondary' %>
    </div>
    <div class="card-body">
      <%= @mainthread.info %>
    </div>
  </div>
</div>
<% end %>
