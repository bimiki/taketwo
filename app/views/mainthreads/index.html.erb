<div class="card">
<h1>Main Info area</h1>
<div class="container">
  <p class="buttons"><%= link_to 'add info', new_mainthread_path %></p>
    <% @mainthreads.each do |mainthread| %>
<br>
<br>

        <span style="display: inline-block; flex;" class="maincontent"><%= mainthread.name %></span>
        <span style="display: inline-block;" class="maincontent"><%= mainthread.info %></span>
        <br/>
        <br/>
        <br/><!--just to keep the buttons seperate-->
        <tb class="buttons"><%= link_to 'Show', mainthread %></tb>
        <tb class="buttons"><%= link_to 'Destroy', mainthread, method: :delete, data: { confirm: 'Are you sure?' } %></tb>

    <% end %>
</div>
</div>
